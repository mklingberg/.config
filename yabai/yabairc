# default layout (can be bsp, stack or float)
yabai -m config layout bsp

# New window spawns to the right if vertical split, or bottom if horizontal split
yabai -m config window_placement second_child

yabai -m config top_padding 0
yabai -m config bottom_padding 0
yabai -m config left_padding 0
yabai -m config right_padding 0
yabai -m config window_gap 2

yabai -m config --display 2 top_padding 0
yabai -m config --display 2 bottom_padding 0
yabai -m config --display 2 left_padding 0
yabai -m config --display 2 right_padding 0
yabai -m config --display 2 window_gap 2

# You can hide the insertion overlay by setting the config option insert_feedback_color.
#yabai -m config insert_feedback_color 0x00FFFFFF

# Set some space for sketchybar
yabai -m config external_bar all:20:0

# Set new windows to open on the active displa
yabai -m config window_origin_display focused

# Set the border color of the focused window to dracula yellow
yabai -m config insert_feedback_color 0xfff1fa8c

# Automatically focus windows when the mouse enters them
yabai -m config focus_follows_mouse autofocus

# center mouse on window with focuts
#yabai -m config mouse_follows_focus on

# modifier for clicking and dragging with mouse
yabai -m config mouse_modifier alt

# set modifier + left-click drag to move window
#yabai -m config mouse_action1 move
# set modifier + right-click drag to resize window
#yabai -m config mouse_action2 resize

# when window is dropped in center of another window, swap them (on edges it will split it)
yabai -m mouse_drop_action swap

# send display events to sketchybar
#yabai -m signal --add event=display_added action="$HOME/.config/sketchybar/plugins/reload.sh display_added"
#yabai -m signal --add event=display_removed action="$HOME/.config/sketchybar/plugins/reload.sh display_removed"


