#!/usr/bin/env zsh

source "$CONFIG_DIR/colors.sh" # Loads all defined colors

FONT_FACE="JetBrainsMono Nerd Font"
PLUGIN_DIR="$HOME/.config/sketchybar/plugins-laptop"
PLUGIN_SHARED_DIR="$HOME/.config/sketchybar/plugins"
SPOTIFY_EVENT="com.spotify.client.PlaybackStateChanged"

# Get the screen resolution
#SCREEN_RESOLUTION=$(system_profiler SPDisplaysDataType | awk '/Resolution/{print $2, $4}' | head -n1)
# Extract the width from the resolution
#SCREEN_WIDTH=$(echo $SCREEN_RESOLUTION | awk '{print $1}')
# Calculate 10% of the screen width
#SCREEN_WIDTH_PERCENT=$(echo "$SCREEN_WIDTH * 0.10" | bc -l)
# Round the result to an integer, as screen dimensions should be whole numbers
#SCREEN_WIDTH_PERCENT=$(printf "%.0f" $SCREEN_WIDTH_PERCENT)
# If the number is odd, subtract 1 to make it even
#if [ $(($SCREEN_WIDTH_PERCENT % 2)) -ne 0 ]; then
#    SCREEN_WIDTH_PERCENT=$(($SCREEN_WIDTH_PERCENT - 1))
#fi

# Debug output
#echo "Screen resolution: $SCREEN_RESOLUTION" >> ~/sketchybar_debug.log
#echo "Screen width: $SCREEN_WIDTH" >> ~/sketchybar_debug.log
#echo "20% of screen width: $SCREEN_WIDTH_PERCENT" >> ~/sketchybar_debug.log

MARGIN_LEFT=700
MARGIN_RIGHT=700

# --- LEFT SIDE ---

sketchybar \
    --bar \
        height=24 \
        color=$COLOR_BAR \
        margin=0 \
        sticky=on \
        padding_left=0 \
        padding_right=0 \
        display=main

sketchybar \
    --default \
        background.height=24 \
        icon.color=$COLOR_TEXT \
        icon.font="$FONT_FACE:Medium:16.0" \
        icon.padding_left=5 \
        icon.padding_right=5 \
        label.color=$COLOR_TEXT \
        label.font="$FONT_FACE:Bold:14.0" \
        label.y_offset=1 \
        label.padding_left=0 \
        label.padding_right=5

sketchybar \
    --add item current_space left \
    --set current_space \
            icon.padding_left=$MARGIN_LEFT \
            icon.padding_right=10 \
            icon.color=$COLOR_TEXT_CONTRAST \
            background.color=$COLOR_SECONDARY \
            label.drawing=off \
            script="$PLUGIN_SHARED_DIR/current_space.sh" \
    --subscribe current_space space_change mouse.clicked \
    --add item current_space.separator left \
    --set current_space.separator \
            icon= \
            icon.color=$COLOR_SECONDARY \
            background.color=$COLOR_ACCENT \
            icon.font="$FONT_FACE:Bold:20.0" \
            icon.padding_left=0 \
            icon.padding_right=-8 \
            icon.y_offset=1

sketchybar \
    --add item front_app left \
    --set front_app \
            background.color=$COLOR_ACCENT \
            background.padding_left=0 \
            background.padding_right=0 \
            icon.font="sketchybar-app-font:Regular:16.0" \
            icon.padding_right=10 \
            icon.padding_left=10 \
            icon.y_offset=0 \
            label.drawing=no \
            script="$PLUGIN_SHARED_DIR/front_app.sh" \
    --add item front_app.separator left \
    --set front_app.separator \
            background.color=0x00000000 \
            icon= \
            icon.color=$COLOR_ACCENT \
            icon.font="$FONT_FACE:Bold:18.0" \
            icon.padding_left=0 \
            icon.padding_right=0 \
            icon.y_offset=1 \
            label.drawing=no \
    --add item front_app.name left \
    --set front_app.name \
            background.color=0x00000000 \
            icon.drawing=off \
            label.font="$FONT_FACE:Bold:16.0" \
            label.color=0xffcad3f5 \
            label.padding_left=10

sketchybar \
    --add bracket front_app_bracket \
            front_app \
            front_app.separator \
            front_app.name \
    --subscribe front_app front_app_switched

# --- MIDDLE ---

sketchybar --add item cpu q \
           --set cpu  update_freq=5 \
                      icon.padding_left=10 \
                      label.padding_right=10 \
                      icon=􀧓 \
                      script="$PLUGIN_SHARED_DIR/cpu.sh"

sketchybar \
    --add item memory q \
    --set memory \
            icon=  \
            icon.padding_left=10 \
            label.padding_right=10 \
            update_freq=10 \
            script="$PLUGIN_SHARED_DIR/memory.sh"

sketchybar \
    --add item battery e \
    --set battery \
        update_freq=20 \
        icon.padding_left=10 \
        label.padding_right=10 \
        script="$PLUGIN_SHARED_DIR/battery.sh"

sketchybar \
    --add item volume e \
    --set volume \
            icon.padding_left=10 \
            label.padding_right=10 \
            label.drawing=true \
            script="$PLUGIN_SHARED_DIR/volume.sh" \
    --subscribe volume volume_change


# --- RIGHT SIDE ---
# 0xffed8796
#icon.color=$COLOR_TEXT_CONTRAST \
    #icon=󰃰 \
    #icon.padding_left=10 \
sketchybar \
    --add item clock right \
    --set clock \
            label.color=$COLOR_TEXT_CONTRAST \
            label.padding_right=$MARGIN_RIGHT \
            background.color=$COLOR_SECONDARY \
            update_freq=10 \
            script="$PLUGIN_SHARED_DIR/clock.sh" \
    --add item clock.separator right \
    --set clock.separator \
            background.color=$COLOR_ACCENT \
            icon= \
            icon.color=$COLOR_SECONDARY \
            icon.font="$FONT_FACE:Bold:20.0" \
            icon.padding_left=0 \
            icon.padding_right=-8 \
            icon.y_offset=1

sketchybar \
    --add event spotify_change $SPOTIFY_EVENT \
    --add item spotify right \
    --set spotify \
            icon= \
            icon.y_offset=0 \
            icon.padding_left=10 \
            icon.padding_right=10 \
            label.padding_right=10 \
            label.drawing=off \
            label.padding_left=3 \
            background.color=$COLOR_ACCENT \
            script="$PLUGIN_DIR/spotify.sh" \
    --subscribe spotify spotify_change mouse.clicked \
    --add item spotify.separator right \
    --set spotify.separator \
            icon= \
            icon.color=$COLOR_ACCENT \
            icon.font="$FONT_FACE:Bold:20.0" \
            icon.padding_left=0 \
            icon.padding_right=-8 \
            icon.y_offset=1

#sketchybar --add item media e \
#           --set media label.color=$COLOR_ACCENT \
#                       label.max_chars=20 \
#                       icon.padding_left=0 \
#                       scroll_texts=on \
#                       icon=􀑪             \
#                       icon.color=$COLOR_ACCENT   \
#                       background.drawing=off \
#                       script="$PLUGIN_SHARED_DIR/media.sh" \
#           --subscribe media media_change

##### Finalizing Setup #####
sketchybar --update
sketchybar --trigger space_change
sketchybar --trigger volume_change